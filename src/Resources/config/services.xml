<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Inocean\SalesTaxesCanada\Checkout\Cart\Tax\CanadaTaxProvider">
            <tag name="shopware.tax.provider" />
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="Inocean\SalesTaxesCanada\Checkout\Cart\Tax\CanadaTaxRegistryDecorator"
                 public="true"
                 decorates="Shopware\Core\Checkout\Cart\TaxProvider\TaxProviderRegistry"
                 decoration-inner-name="canada.tax.inner">
            <argument type="service" id="canada.tax.inner"/>
            <argument type="service" id="Inocean\SalesTaxesCanada\Checkout\Cart\Tax\CanadaTaxProvider"/>
        </service>
    </services>
</container>

