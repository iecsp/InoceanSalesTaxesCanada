<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="InoceanSalesTaxesCanada\Service\TaxConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="InoceanSalesTaxesCanada\Service\OrderLoadedSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="InoceanSalesTaxesCanada\Core\Checkout\Cart\Tax\CanadaTaxProvider">
            <tag name="shopware.tax.provider"/>
            <argument type="service" id="InoceanSalesTaxesCanada\Service\TaxConfigService"/>
        </service>
        <service id="InoceanSalesTaxesCanada\Twig\TaxNameExtension">
            <tag name="twig.extension"/>
            <argument type="service" id="InoceanSalesTaxesCanada\Service\TaxConfigService"/>
        </service>
    </services>
</container>